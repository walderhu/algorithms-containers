[user]
    name = denis | walderhu
    email = denis.lipatov163@gmail.com

[alias]
    list = config --list
    apply = config --global include.path # $(GITCONFIG_PATH)
    unapply = config --global --unset include.path

    amend = "!f() { read -p 'Вы уверены, что хотите выполнить пуш без коммита? (y/n): ' confirm; if [ \"$confirm\" = 'y' ]; then git add . && git commit --amend --no-edit && git push -f; else echo 'Отменено.'; fi; }; f"
    delete = "!f() { read -p 'Вы уверены, что хотите удалить ветку? (y/n): ' confirm; if [ \"$confirm\" = 'y' ]; then git push origin --delete "$1" && git branch -D "$1"; else echo 'Отменено.'; fi; }; f"
    diff = diff --color-words 
    patch = format-patch origin/master
    lg = log --graph --oneline --decorate
    s = checkout -
    diff = diff --cached
    develop = "!f() { git checkout walderhu/develop; }; f"
    feature = "!f() { git checkout walderhu/feature; }; f"
    master = "!f() { git checkout walderhu/master; }; f"

[merge]
    tool = meld
    conflictstyle = diff3
    options = -X theirs

[init]
    defaultBranch = walderhu/feature

[core]
    editor = nano
    # editor = code --wait  

[completion]
    auto = true

[pull]
    rebase = true  

[credential]
    helper = cache 

[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[completion]
    auto = true
    useConfigOnly = true