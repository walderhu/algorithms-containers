[user]
    name = denis | walderhu
    email = denis.lipatov163@gmail.com

[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto

[alias]
    co = checkout
    ci = commit
    lg = log --graph --oneline --decorate
    amend = commit --amend --no-edit
    last = log -1 HEAD
    ciw = commit -m
    undo = reset HEAD~1 --mixed
    uncommit = reset HEAD~1 --soft
    format-patch = format-patch origin/master
    diff = diff --color-words 

[merge]
    tool = meld
    conflictstyle = diff3
    options = -X theirs

[core]
    editor = nano
    # editor = code --wait  

[completion]
    auto = true

[pull]
    rebase = true  